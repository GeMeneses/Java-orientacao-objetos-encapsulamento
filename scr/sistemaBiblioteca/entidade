package sistemaBiblioteca.entidade;

public class Livro {  //atributos da classe
    private String titulo;
    private String autor;
    private int quantidade;

    public Livro(String titulo, String autor, int quantidade) { // contrutor que possui quantidade incial
        this.titulo = titulo;
        this.autor = autor;
        this.quantidade = quantidade;
    }

    public Livro(String titulo, String autor) { // contrutor que não exige quantidade inicial
        this.titulo = titulo;
        this.autor = autor;
        this.quantidade = 0;
    }

    // controle de acesso:
    public String getLivro() {
        return titulo;
    }

    public String getAutor() {
        return autor;
    }

    public int getQuantidade() {
        return quantidade;
    }

    public void setQuantidade(int quantidade) {
        this.quantidade = quantidade;
    }
    //fim do controle de acesso

    public void emprestimo(int emprestar) {// metodo que diminui a quantidade de livros
        if (emprestar <= quantidade) {
            quantidade -= emprestar;
        } else {
            System.out.println("Não há livros suficientes para empréstimo \n");
        }
    }

    public void devolucao(int devolver) { // metodo que aumenta a quantidade de livros
        quantidade += devolver;
    }

    public String toString() {
        return "Livro: "
                + titulo + "\n"
                + "Autor: "
                + autor + "\n"
                + "Quantidade: "
                + quantidade;
    }
}
