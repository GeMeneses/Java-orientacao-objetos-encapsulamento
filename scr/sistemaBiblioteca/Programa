package sistemaBiblioteca.programa;

import sistemaBiblioteca.entidade.Livro;

import java.util.Locale;
import java.util.Scanner;

public class Programa {
    public static void main(String[] args) {

        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);
        Livro livro;


        System.out.print("Entre com o nome do Livro:");
        String nome = sc.nextLine();
        System.out.print("Entre com o nome do Autor: ");
        String autor = sc.nextLine();
        System.out.print("Possui quantidade inicial de exemplares? (s/n)?");
        char resposta = sc.next().charAt(0);
        if (resposta == 's' || resposta == 'S') {
            System.out.print("Digite a quantidade: ");
            int quantidade = sc.nextInt();
            livro = new Livro(nome, autor, quantidade);
        } else {
            livro = new Livro(nome, autor);
        }


        System.out.println(livro);

        int opcao = 0;
        while (opcao != 3){
            System.out.println();
            System.out.println("1 - Emprestar livro");
            System.out.println("2 - Devolver livro");
            System.out.println("3 - Sair");
            System.out.print("Escolha uma opção: ");
            opcao = sc.nextInt();

            if (opcao == 1) {
                System.out.println("Quantidade de livros:");
                int emprestimo = sc.nextInt();
                livro.emprestimo(emprestimo);
                System.out.println(livro);

            }else if (opcao == 2) {
                System.out.println("Quantidade de livros:");
                int devolver = sc.nextInt();
                livro.devolucao(devolver);
                System.out.println(livro);
            } else if (opcao == 3) {
                System.out.println("Saindo do sistema");
            }else {
                System.out.println("Opção inválida.");
            }
        }
        sc.close();


    }



}

